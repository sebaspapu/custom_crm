<odoo>
    <data>
        <!-- todas la vitas se definen con la etiqueta record -->

        <record model="ir.ui.view" id="view_custom_crm_visit_form">
            <field name="name">view.custom.crm.visit.form</field>
            <field name="model">custom_crm.visit</field>
            <field name="arch" type="xml">
                <form string="Visita">
                    <sheet> <!-- representa_todo el cuadro en donde va a quedar almacenada la info de lo que ponemos en la filas y columnas -->
                        <group name="group_top">

                            <group name="group_left"> <!-- grupo de la columna de la izquierda -->
                                <field name="customers"/>
                                <field name="date"/>
                                <field name="type"/>
                            </group>

                            <group name="group_rigth"> <!-- grupo de la columna de la derecha -->
                                <field name="name"/>
                                <field name="done"/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_custom_crm_visit" model="ir.ui.view">
            <field name=""></field>
            <field name=""></field>
            <field name="arch" type="xml">


            </field>
        </record>


    </data>
</odoo>